package Files;
import java.io.Serializable;

public class Serial implements Serializable
{
      private transient int empId;
      private String empName;
      private transient String empAddrs;
      private double empSalary;
      
	public Serial(int empId, String empName, String empAddrs, double empSalary) {
		super();
		this.empId = empId;
		this.empName = empName;
		this.empAddrs = empAddrs;
		this.empSalary = empSalary;
	}
	@Override
	public String toString() {
		return "Employee [empId=" + empId + ", empName=" + empName + ", empAddrs=" + empAddrs + ", empSalary="
				+ empSalary + "]";
	}      
}

//MAIN METHOD

package Files;
import java.io.FileOutputStream;
import java.io.ObjectOutputStream;
public class Serial_Test 
{
  public static void main(String[]args) throws Exception
  {
	  FileOutputStream fos = new FileOutputStream("D:\\MyFolder\\Employee.txt");
		ObjectOutputStream oos = new ObjectOutputStream(fos);
		
		try(fos;oos)
		{
			Serial e = new Serial(11,"Charan", "Hyd", 67000.0);
			oos.writeObject(e);
			System.out.print("data is successfully added");
		}
		catch (Exception e) 
		{
			e.printStackTrace();
		}
  }
}
