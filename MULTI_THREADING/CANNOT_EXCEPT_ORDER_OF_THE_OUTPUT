package com.vr.MutliThreading;
class Thread_creation extends Thread
{
	
		@Override
		public void run() 
		{
			String name = Thread.currentThread().getName();
			for(int i=0; i<=5; i++)
			{
				System.out.println("i value is :"+i+" by "+name+ " thread");
			}
		}
}
//MAIN METHOD
package com.vr.MutliThreading;

public class Multithreading_test 
{
	public static void main(String[] args) 
    {
    	System.out.println("Main thread started..");
    	
    	Thread_creation l = new Thread_creation();
    	l.start(); // Thread started
    	String name = Thread.currentThread().getName();
    	
    	for(int i=0;i<=5;i++)
    	{
    		System.out.println("i value is :"+i+" by "+ name +" thread");
    	}
    	
    }
}
